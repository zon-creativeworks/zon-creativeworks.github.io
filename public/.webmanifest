{
  "version": "0.0.1",
  "app_version": "0.0.2",
  "manifest_version": 3,
  "default_locale": "en-US",

  "short_name": "TiLLI",
  "name" : "TiLLI - An A.I. Companion",
  "description": "The Talking Large-Language Interface - An AI Companion",
  "omnibox": { "keyword": "tilli" },
  "start_url": "/",

  "display": "fullscreen",
  "theme_color": "#000000",
  "background_color": "#000000",

  "icons": [
    {
      "src": "assets/icons/splash.svg",
      "type": "image/svg+xml",
      "sizes": "512x512"
    },
    {
      "src": "assets/icons/splash.svg",
      "type": "image/svg+xml",
      "sizes": "1024x1024",
      "purpose": "maskable"
    }
  ],

  "import": true,
  "storage": true,
  "offline_enabled": true,
  "optional_permissions": ["geolocation", "microphone"]
}