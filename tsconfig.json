{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",

    "allowJs": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": false,
    "noImplicitThis": true,
    "sourceRoot": "code/",
    "composite": true,
    "declaration": true,
    "disableSizeLimit": true,
    "outDir": "public/scripts",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
  },
  "include": ["code/"],
  "exclude": ["**/*.spec.ts"]
}