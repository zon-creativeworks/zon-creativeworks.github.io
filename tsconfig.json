{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",

    "allowJs": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "preserveConstEnums": false,
    "noImplicitThis": true,
    "sourceRoot": "code/",
    "composite": true,
    "declaration": true,
    "disableSizeLimit": true,
    "outDir": "./scripts",
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "exclude": [
    "**/*.spec.ts", 
    "vite.config.ts", 
    "vercel.json",
    "scripts/"
  ]
}